<!DOCTYPE html>
<html>
<head>
  <title>Job Listings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container py-5">
    <h2 class="mb-4">Available Jobs</h2>

    <% if (jobs.length === 0) { %>
      <p>No jobs posted yet.</p>
    <% } else { %>
      <% jobs.forEach(job => { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= job.title %></h5>
            <p class="card-text"><%= job.description %></p>
            <p><strong>Budget:</strong> $<%= job.budget %></p>
            <p><strong>Posted by:</strong> <%= job.owner_name %></p>
            <form action="/dashboard/apply/<%= job.id %>" method="POST">
                <textarea name="message" class="form-control mb-2" placeholder="Why should you be hired?" required></textarea>
                <button type="submit" class="btn btn-outline-primary">Apply</button>
              </form>
              </div>
        </div>
      <% }) %>
    <% } %>

    <a href="/dashboard" class="btn btn-outline-secondary mt-4">Back to Dashboard</a>
  </div>
</body>
</html>
