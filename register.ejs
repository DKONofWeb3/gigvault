<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }
    .role-card {
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      cursor: pointer;
      transition: border 0.3s;
    }
    .role-card:hover {
      border: 2px solid #007BFF;
    }
    .role-radio {
      float: right;
      transform: scale(1.5);
    }
    .selected {
      border: 2px solid #007BFF;
    }
    .logo {
  max-width: 150px;
  margin: 0 auto 20px;
  display: block;
}


  </style>
</head>
<body>
  <img src="/img/gigvult-logo.jpg" alt="GigVault Logo" class="logo" />

  <div class="container py-5">
    <h2 class="text-center mb-4">Join as a Project Owner or Job Seeker</h2>

    <form action="/register" method="POST">
      <input type="hidden" name="role" id="selectedRole" required>

      <div onclick="selectRole('owner')" class="role-card" id="ownerCard">
        I'm a Project Owner, project posting
        <input type="radio" class="role-radio" name="role-radio" />
      </div>

      <div onclick="selectRole('seeker')" class="role-card" id="seekerCard">
        I'm a Job Seeker, looking for work
        <input type="radio" class="role-radio" name="role-radio" />
      </div>

      <div class="mb-3">
        <input type="text" name="username" class="form-control" placeholder="Username" required />
      </div>
      <div class="mb-3">
        <input type="email" name="email" class="form-control" placeholder="Email" required />
      </div>
      <div class="mb-3">
        <input type="password" name="password" class="form-control" placeholder="Password" required />
      </div>


      <p class="text-muted mb-3" style="font-size: 14px;">
  By logging in, you agree to our 
  <a href="/terms" target="_blank">Terms of Use</a> and 
  <a href="/privacy" target="_blank">Privacy Policy</a>.
</p>

      <button type="submit" class="btn btn-primary w-100">Create Account</button>
    </form>

    <div class="text-center mt-3">
      Already have an account? <a href="/login">Log In</a>
    </div>
  </div>

  <script>
    function selectRole(role) {
      document.getElementById("selectedRole").value = role;
      document.getElementById("ownerCard").classList.remove("selected");
      document.getElementById("seekerCard").classList.remove("selected");

      if (role === "owner") {
        document.getElementById("ownerCard").classList.add("selected");
      } else {
        document.getElementById("seekerCard").classList.add("selected");
      }
    }
  </script>
</body>
</html>

